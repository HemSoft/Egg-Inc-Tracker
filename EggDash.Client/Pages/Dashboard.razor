        </MudItem>
        <MudItem xs="3">
            <MudPaper Class="d-flex justify-center align-center" Style="height: 100%;">
                <MudText>Tile 14: Mission Stats</MudText>
            </MudPaper>
        </MudItem>
        <MudItem xs="3">
            <MudPaper Class="d-flex justify-center align-center" Style="height: 100%;">
                <MudText>Tile 15: Coop Status</MudText>
            </MudPaper>
        </MudItem>
        <MudItem xs="3">
            <MudPaper Class="d-flex justify-center align-center" Style="height: 100%;">
                <MudText>Tile 16: Miscellaneous</MudText>
            </MudPaper>
        </MudItem>
    </MudGrid>

</div>
